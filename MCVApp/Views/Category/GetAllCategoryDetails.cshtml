@model IEnumerable<WebApp.Models.CategoryModel>
@{
    ViewBag.Title = "GetAllCategories";
}

<h2>All Categories</h2>

<p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryCode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { CategoryId = item.CategoryId, Name = item.Name, CategoryCode = item.CategoryCode }) |
                @Html.ActionLink("Details", "Details", new { CategoryId = item.CategoryId })
            </td>
        </tr>
    }

</table>
